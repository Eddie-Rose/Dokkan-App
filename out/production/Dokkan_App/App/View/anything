if (randomNumber < fileCount){
        testBackground = listOfFilesString[randomNumber + 1];
        }else {
        testBackground = listOfFilesString[(int) (Math.random() * 0)];
        }
        Image setRightImage = new Image("img/Background/" + testBackground);



        rightBackground.setImage(setRightImage);
        rightBackground.setPreserveRatio(false);
        rightBackground.setFitHeight(900);
